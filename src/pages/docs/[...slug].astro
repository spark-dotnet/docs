---
import { CollectionEntry, getCollection } from 'astro:content';
import DocsLayout from '../../layouts/DocsLayout.astro';

export async function getStaticPaths() {
	const docs = await getCollection('docs');
	return docs.map((entry) => ({
		params: {
			slug: entry.slug,
		},
		props: entry,
	}));
}
type Props = CollectionEntry<'docs'>;
const post = Astro.props;
const { Content, headings } = await post.render();
---

<DocsLayout {...post.data}>
	<div class="lg:flex flex-row">
		<div class="w-full max-w-4xl mx-auto lg:w-[75%] lg:px-6">
			<div class="markdown">
				<h1>{post.data.title}</h1>
			</div>
			<div class="markdown">
				<Content />
			</div>
		</div>
		<div class="px-6 hidden xl:flex w-[25%] sticky top-[7.5625rem] h-[calc(100%-50px)] overflow-y-auto no-scrollbar self-start">
			<div class="">
				<ul class="list-none space-y-3 text-xs">
					{headings.map((item) => (
						item.depth <=2 ? 
						<li class="text-gray-600"><a href={'#'+item.slug}>{item.text}</a></li> 
						:
						item.depth < 4 ? 
						<li class="font-light pl-6 text-gray-600"><a href={'#'+item.slug}>{item.text}</a></li> 
						:
						''
					))}
				</ul>
			</div>
		</div>
	</div>
</DocsLayout>